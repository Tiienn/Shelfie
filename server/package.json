{
  "name": "@shelfie/server",
  "version": "1.0.0",
  "description": "Shelfie API Server - Node.js backend services",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "npm run clean && npm run build:ts",
    "build:ts": "tsc",
    "clean": "rimraf dist",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch=\"**/*.integration.test.ts\"",
    "test:e2e": "jest --testMatch=\"**/*.e2e.test.ts\"",
    
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit",
    
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx src/database/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    
    "docker:build": "docker build -t shelfie/server .",
    "docker:run": "docker run -p 3001:3001 shelfie/server",
    
    "load:test": "artillery run tests/load/artillery.yml",
    "security:audit": "npm audit --audit-level moderate",
    "security:scan": "snyk test"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    
    "@prisma/client": "^5.4.2",
    "prisma": "^5.4.2",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    
    "multer": "^1.4.5-lts.1",
    "@aws-sdk/client-s3": "^3.423.0",
    "@aws-sdk/client-textract": "^3.423.0",
    "@aws-sdk/s3-request-presigner": "^3.423.0",
    
    "amqplib": "^0.10.3",
    "bullmq": "^4.15.0",
    
    "socket.io": "^4.7.2",
    "ws": "^8.14.2",
    
    "joi": "^17.11.0",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.2",
    "express-slow-down": "^2.0.1",
    
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    
    "nodemailer": "^6.9.7",
    "@sendgrid/mail": "^7.7.0",
    
    "axios": "^1.5.1",
    "node-cron": "^3.0.3",
    "sharp": "^0.32.6",
    
    "dotenv": "^16.3.1",
    "config": "^3.3.9",
    
    "openai": "^4.11.1",
    "@anthropic-ai/sdk": "^0.6.0",
    
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.19",
    "@types/cors": "^2.8.15",
    "@types/morgan": "^1.9.7",
    "@types/compression": "^1.7.4",
    "@types/bcryptjs": "^2.4.5",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/passport": "^1.0.14",
    "@types/passport-jwt": "^3.0.11",
    "@types/passport-local": "^1.0.37",
    "@types/multer": "^1.4.9",
    "@types/amqplib": "^0.10.4",
    "@types/ws": "^8.5.8",
    "@types/joi": "^17.2.3",
    "@types/nodemailer": "^6.4.13",
    "@types/node-cron": "^3.0.9",
    "@types/sharp": "^0.32.0",
    
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.14.0",
    
    "jest": "^29.7.0",
    "@types/jest": "^29.5.6",
    "ts-jest": "^29.1.1",
    "supertest": "^4.0.2",
    "@types/supertest": "^2.0.14",
    
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    
